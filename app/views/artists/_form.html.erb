<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>
<hr />
<div class="ui form">
<%= form_with(model: [@billboard, @artist], local: true, class: 'ui form') do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
</div>
<br />
<div class="field">
   <%= f.label :genre %>
  <%= f.text_field :genre, required: true %>
</div>
<br />

<div class="field">
  <%= f.label :avatar %>
  <%= f.text_field :avatar %>
</div>
<br />

<div class="field">
  <%= f.label :spot_on_charts %>
  <%= f.text_field :spot_on_charts %>
</div>
<br />

<div class="field">
   <%= f.label :weeks_on_charts %>
  <%= f.text_field :weeks_on_charts %>
  </div>
<br />

  <div class="field">
    <%= f.label :about_artists %>
    <%= f.text_field :about_artists %>
<br />

<div class="field">
    <%= f.label :youtube_id %>
    <%= f.text_field :youtube_id %>
<br />

   <div class="ui button"> <%= f.submit %>
  </div>
  
<% end %>
</div>